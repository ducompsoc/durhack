{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    // emitted code / module resolution settings
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "rootDir": "./",
    "baseUrl": "./",
    "sourceMap": true,
    "newLine": "lf",
    "esModuleInterop": true,

    // typescript language settings (what is allowed and what is not)
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,

    // miscellaneous settings
    "skipLibCheck": true,

    // path aliases
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "exclude": ["./dist", "./node_modules", "./__tests__"],
  "include": ["src", "config", "templates"]
}

{{#each schedule}}
	<div class="group">
		{{#if @key}}
			<div class="bracket center column">
				<div class="day">{{day}}</div>
			</div>
		{{/if}}

		<div class="row set">
			{{#each events}}
				<div class="event">
					<div class="line row center">
						<div class="gap"></div>
					</div>

					<div class="inner">
						<div class="time">{{start}}{{#if end}} &ndash; {{end}}{{/if}}</div>
						<div class="row center">
							<div class="icon">
								<img src="/assets/icons/{{icon}}.svg" />
							</div>
						</div>
						<div class="title">{{title}}</div>
					</div>
				</div>
			{{/each}}
		</div>
	</div>
{{/each}}
